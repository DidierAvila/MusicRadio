@model MusicRadio.Dtos.ClientDto

@{
    ViewData["Title"] = "Registrar usuario";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/MusicRadio.styles.css" asp-append-version="true" />
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 600px;">
        <h2 class="text-center">Crear usuario</h2>
        <hr />
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Id" class="form-label fw-bold">ID</label>
                <input asp-for="Id" class="form-control" maxlength="10" required />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                <input asp-for="Password" class="form-control" maxlength="30" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Nombre</label>
                <input asp-for="Name" class="form-control" maxlength="100" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Mail" class="form-label fw-bold">Correo</label>
                <input asp-for="Mail" class="form-control" maxlength="50" type="email" required title="Debe ser un correo válido" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Direction" class="form-label fw-bold">Dirección</label>
                <input asp-for="Direction" class="form-control" maxlength="500" />
                <span asp-validation-for="Direction" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Teléfono</label>
                <input asp-for="Phone" class="form-control" maxlength="20" pattern="[0-9]+" title="Solo números permitidos" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Crear Cuenta</button>
                <a href="/Account/Login" class="btn-link">Login</a>
            </div>

            <div class="d-grid gap-2">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
