@{
    @model MusicRadio.Dtos.LoginDto
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/MusicRadio.styles.css" asp-append-version="true" />
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h2 class="text-center">Login</h2>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ClientId" class="control-label">User</label>
                <input asp-for="ClientId" class="form-control" maxlength="10" required pattern="[A-Za-z0-9]+" title="Debe contener solo letras y números" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" maxlength="30" type="password" required title="Máximo 30 caracteres" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="/Account/Register" class="btn-link">Registrarse</a>
            </div>

            <div class="d-grid gap-2">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning">@TempData["Message"]</div>
                }
            </div>
        </form>
    </div>
    
</div>
